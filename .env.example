# Graston Dashboard Environment Configuration
# Copy this file to .env.local and fill in your actual values

# Next.js Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-nextauth-secret-here

# Google OAuth Configuration
# Get these from Google Cloud Console
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# WordPress API Configuration
WP_API_URL=https://your-wordpress-site.com/wp-json/graston/v1
WP_API_USER=your-wp-api-username
WP_API_PASSWORD=your-wp-api-password

# WooCommerce API Configuration (for future use)
WC_API_URL=https://your-woocommerce-site.com/wp-json/wc/v3
WC_API_KEY=your-woocommerce-api-key
WC_API_SECRET=your-woocommerce-api-secret

# Application Configuration
APP_ENV=development
LOG_LEVEL=info

# Security Configuration
ALLOWED_DOMAIN=grastontechnique.com

# Optional: Analytics and monitoring
# ANALYTICS_ID=your-analytics-id
# SENTRY_DSN=your-sentry-dsn